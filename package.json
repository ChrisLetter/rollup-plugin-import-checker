{
  "name": "rollup-plugin-import-checker",
  "version": "0.0.2",
  "description": "A Rollup plugin that warns or throws an error when a specific import is found",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint src tests",
    "format": "prettier . --write",
    "precommit": "npm run lint && npm run format",
    "prepare": "husky",
    "test": "vitest --run",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "vite-plugin",
    "rollup-plugin",
    "import",
    "modules"
  ],
  "author": "Christian Letter",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts}": "npm run precommit"
  },
  "dependencies": {
    "consola": "^3.2.3",
    "minimatch": "^9.0.4"
  },
  "bugs": "https://github.com/ChrisLetter/rollup-plugin-import-checker/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisLetter/rollup-plugin-import-checker"
  },
  "peerDependencies": {
    "rollup": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^20.12.12",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.0.11",
    "knitwork": "^1.1.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.10",
    "vitest": "^1.6.0"
  }
}
